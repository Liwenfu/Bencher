<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/mypage_image_btn_all"
        style="@style/bus_info_text_style2"
        android:drawableLeft="@drawable/icon_all"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="全部" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/splitline" />

    <TextView
        android:id="@+id/mypage_image_btn_asmoney"
        style="@style/bus_info_text_style2"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_coupon"
        android:textSize="15sp"
        android:text="代金券" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/splitline" />
    <TextView
        android:id="@+id/mypage_image_btn_gift"
        style="@style/bus_info_text_style2"
        android:gravity="center_vertical"
		android:textSize="15sp"
        android:drawableLeft="@drawable/icon_gift"
        android:text="礼品" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/splitline" />
    <TextView
        android:id="@+id/mypage_image_btn_money"
        style="@style/bus_info_text_style2"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@drawable/icon_cash"
        android:text="现金" />

</LinearLayout>